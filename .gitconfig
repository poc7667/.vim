[user]
	name = poc7667
	email = poc7667@gmail.com
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    di = diff
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
    unadd = reset HEAD --
    amend = commit --amend
    aa = add --all
    head = !git l -1
    h = !git head
    r = !git --no-pager l -20
    ra = !git r --all
    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    l = log --graph --abbrev-commit --date=relative
    la = !git l --all
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    pom = push origin master
    b = branch    

[format]
    pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset

[color]
    status = auto
    ui = auto
[core]
	editor = subl -n -w
[push]
    default = simple

[mergetool]
	keepBackup = true
